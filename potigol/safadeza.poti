somatorio(n: Inteiro) = para i de 1 até n gere i fim.injete(0)(_+_)

safadeza(dia, mes, ano: Inteiro)
  somatorio(mes) + (ano/100) * (50 - dia)
fim

escreva_safadeza(dia, mes, ano: Inteiro)
  saf = safadeza(dia, mes, ano)
  anj = 100 - saf
  escreva "Você é {saf formato "%.1f"}% safado e {anj formato "%.1f"}% anjo."
fim
